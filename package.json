{
	"name": "track-finder-webapp",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@apollo/client": "^3.3.13",
		"@craco/craco": "^6.1.1",
		"@emotion/react": "^11.1.5",
		"@emotion/styled": "^11.1.5",
		"@material-ui/core": "^5.0.0-alpha.28",
		"@material-ui/icons": "^5.0.0-alpha.28",
		"@material-ui/styled-engine-sc": "latest",
		"dayjs": "^1.10.4",
		"faker": "^5.4.0",
		"graphql": "^15.5.0",
		"lodash": "^4.17.21",
		"msw": "^0.27.2",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-router-dom": "^5.2.0"
	},
	"scripts": {
		"start": "craco start",
		"start:mock": "cross-env REACT_APP_API_MOCK=true craco start",
		"build": "cross-env REACT_APP_API_MOCK=false craco build",
		"test": "craco test --watchAll=false",
		"eject": "react-scripts eject",
		"prettify": "prettier --write src/",
		"lint": "npm run lint:es && npm run type-check",
		"lint:es": "eslint --ext '.js,.jsx,.ts,.tsx'",
		"type-check": "tsc --noEmit",
		"lint:fix": "npm run lint:es -- --fix",
		"validate": "npm run --print-label lint && npm run test",
		"codegen": "graphql-codegen -r dotenv/config --config codegen.yml ",
		"prepare": "husky install"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@graphql-codegen/add": "^2.0.2",
		"@graphql-codegen/cli": "^1.21.3",
		"@graphql-codegen/fragment-matcher": "^2.0.1",
		"@graphql-codegen/introspection": "^1.18.1",
		"@graphql-codegen/schema-ast": "^1.18.1",
		"@graphql-codegen/time": "^2.0.2",
		"@graphql-codegen/typescript": "^1.21.1",
		"@graphql-codegen/typescript-operations": "^1.17.15",
		"@graphql-codegen/typescript-react-apollo": "^2.2.3",
		"@testing-library/jest-dom": "^5.11.9",
		"@testing-library/react": "^11.2.5",
		"@testing-library/user-event": "^13.0.11",
		"@tsconfig/create-react-app": "^1.0.2",
		"@types/faker": "^5.1.7",
		"@types/jest": "^26.0.20",
		"@types/lodash": "^4.14.168",
		"@types/node": "^14.14.35",
		"@types/react": "^17.0.3",
		"@types/react-dom": "^17.0.3",
		"@types/react-router-dom": "^5.1.7",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.17.0",
		"cross-env": "^7.0.3",
		"eslint": "^7.22.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-prettier": "^8.1.0",
		"eslint-import-resolver-typescript": "^2.4.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-import-helpers": "^1.1.0",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.23.1",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^5.2.0",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"react-scripts": "4.0.3",
		"typescript": "^4.2.3"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --ext '.js,.jsx,.ts,.tsx'"
		],
		"*.js": "eslint --cache",
		"*.{json,html,md}": "prettier --write"
	},
	"msw": {
		"workerDirectory": "public"
	}
}
